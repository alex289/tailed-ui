{
	"name": "@alex289/tailed-ui",
	"version": "0.0.3",
	"description": "A simple component library built with React and TailwindCSS",
	"scripts": {
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"format": "prettier --write **/*.tsx",
		"format:check": "prettier --check **/*.tsx",
		"lint": "eslint --ext .tsx,.ts src",
		"typecheck": "tsc --noEmit",
		"build": "rollup -c --bundleConfigAsCjs"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"files": [
		"dist"
	],
	"types": "dist/index.d.ts",
	"author": {
		"name": "Alexander Konietzko",
		"url": "https://alexanderkonietzko.vercel.app"
	  },
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex289/tailed-ui.git"
	},
	"bugs": {
		"url": "https://github.com/alex289/tailed-ui/issues"
	},
	"homepage": "https://github.com/alex289/tailed-ui#readme",
	"keywords": [
		"React",
		"Component",
		"Library",
		"Rollup",
		"Typescript",
		"TailwindCSS",
		"Storybook"
	],
	"dependencies": {
		"@storybook/addon-actions": "^6.5.15",
		"@storybook/addon-essentials": "^6.5.15",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/builder-webpack5": "^6.5.15",
		"@storybook/manager-webpack5": "^6.5.15",
		"@storybook/react": "^6.5.15",
		"@types/react": "^18.0.26",
		"autoprefixer": "^10.4.13",
		"postcss": "^8.4.20",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook-dark-mode": "^2.0.4",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^24.0.0",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-terser": "^0.2.1",
		"@rollup/plugin-typescript": "^10.0.1",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"eslint": "^8.30.0",
		"eslint-plugin-react": "^7.31.11",
