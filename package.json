{
  "name": "tailed-ui",
  "version": "0.0.8",
  "description": "A simple component library built with React and TailwindCSS",
  "scripts": {
    "format": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "lint": "eslint --ext .tsx,.ts src",
    "typecheck": "tsc --noEmit",
    "build": "rollup -c --bundleConfigAsCjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "author": {
    "name": "Alexander Konietzko",
    "url": "https://alexanderkonietzko.vercel.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex289/tailed-ui.git"
  },
  "bugs": {
    "url": "https://github.com/alex289/tailed-ui/issues"
  },
  "homepage": "https://github.com/alex289/tailed-ui#readme",
  "keywords": [
    "React",
    "Component",
    "Library",
    "Rollup",
    "Typescript",
    "TailwindCSS",
    "Storybook"
  ],
  "dependencies": {
    "@types/react": "^18.2.22",
    "autoprefixer": "^10.4.15",
    "class-variance-authority": "^0.7.0",
    "postcss": "^8.4.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook-dark-mode": "^3.0.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@storybook/addon-essentials": "^7.4.2",
    "@storybook/addon-interactions": "^7.4.2",
    "@storybook/addon-links": "^7.4.2",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.4.2",
    "@storybook/react": "^7.4.2",
    "@storybook/react-webpack5": "^7.4.2",
    "@storybook/testing-library": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-storybook": "^0.6.13",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "prop-types": "^15.8.1",
    "rollup": "^3.29.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^7.4.2",
    "tslib": "^2.6.2"
  }
